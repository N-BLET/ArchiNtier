@model IEnumerable<Domaine.Models.Student>

@{
    ViewData["Title"] = "Index";
}

<h1>LISTE DES ÉTUDIANTS</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Ajouter un étudiant</a>
</p>

<form asp-action="Index" method="get">
    <div class="form-group mb-4">
        <label for="searchString">Recherche par nom</label>
        <div class="input-group">
            <input type="text" name="searchString" id="searchString" value="@ViewData["CurrentFilter"]" class="form-control" placeholder="Rechercher un nom..." />
            <div class="input-group-append ms-lg-4">
                <button type="submit" class="btn btn-secondary">Rechercher</button>
            </div>
        </div>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            @* <th>
                @Html.DisplayNameFor(model => model.Id)
            </th> *@
            <th>
                @Html.DisplayNameFor(model => model.Nom)
            </th>
            <th>
                @* @Html.DisplayNameFor(model => model.Prenom) *@
                Prénom
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            @* <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td> *@
            <td>
                @Html.DisplayFor(modelItem => item.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prenom)
            </td>
            <td>
                @Html.ActionLink("Éditer", "Edit", new { id=item.Id }) |
                    @Html.ActionLink("Afficher", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Supprimer", "Delete", new { id = item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
