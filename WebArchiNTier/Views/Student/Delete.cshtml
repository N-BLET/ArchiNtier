@model Domaine.Models.Student

@{
    ViewData["Title"] = "Delete";
}

<h1>SUPPRESSION</h1>

<h3>Êtes-vous sûr de vouloir supprimer cet étudiant ?</h3>
<div>
    <h4>Informations de l'étudiant</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nom)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nom)
        </dd>
        <dt class = "col-sm-2">
            Prénom
            @* @Html.DisplayNameFor(model => model.Prenom) *@
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Prenom)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Supprimer" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-dark">Retour à la liste</a>
    </form>
</div>
